<Window x:Class="FinancialManagerApp.Views.EditGoalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj Skarbonkę" Height="450" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Ustawienia Skarbonki" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Nazwa celu:" FontSize="12" Foreground="#7F8C8D"/>
            <TextBox Text="{Binding GoalName}" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Kwota docelowa (zł):" FontSize="12" Foreground="#7F8C8D"/>
            <TextBox Text="{Binding TargetAmount}" Margin="0,5,0,15" Padding="5"/>

            <GroupBox Header="Automatyzacja (wpłaty cykliczne)" Margin="0,0,0,20" Padding="10">
                <StackPanel>
                    <CheckBox Content="Włącz wpłaty cykliczne" IsChecked="{Binding IsAutomatic}" Margin="0,5"/>
                    <StackPanel IsEnabled="{Binding IsAutomatic}">
                        <TextBlock Text="Typ pobierania:" Margin="0,5,0,0" FontSize="11"/>
                        <ComboBox Margin="0,2,0,10" SelectedIndex="0">
                            <ComboBoxItem Content="Konkretna suma miesięcznie"/>
                            <ComboBoxItem Content="% oszczędności z poprzedniego miesiąca "/>
                        </ComboBox>
                        <TextBlock Text="Wartość:" FontSize="11"/>
                        <TextBox Margin="0,2,0,0" Padding="3"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <UniformGrid Columns="2">
                <Button Content="Zapisz zmiany" Background="#1ABC9C" Foreground="White" Margin="0,0,5,0" Padding="10" FontWeight="Bold"/>
                <Button Content="Anuluj" Margin="5,0,0,0" Padding="10"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>