<UserControl x:Class="FinancialManagerApp.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:FinancialManagerApp.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#ECF0F1"
             xmlns:converters="clr-namespace:FinancialManagerApp.Converters">

    <UserControl.Resources>
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Content" Value="Potwierdź"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="5,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CheckedTag}" Value="True">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Content" Value="Zatwierdzono"/>
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <converters:IsNegativeConverter x:Key="IsNegativeConverter"/>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#D5DBDB" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Wybierz Konto" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <ComboBox Width="200" SelectedIndex="0">
                        <ComboBoxItem Content="Wszystkie konta"/>
                        <ComboBoxItem Content="Revolut (API)"/>
                        <ComboBoxItem Content="Portfel Gotówkowy"/>
                    </ComboBox>
                </StackPanel>

                <CheckBox Content="Tylko do kategoryzacji" 
          VerticalAlignment="Bottom" 
          Margin="10,0,0,8" 
          IsChecked="{Binding OnlyUnchecked, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="+ Dodaj transakcję" 
        Command="{Binding OpenAddTransactionCommand}"
        Background="#1ABC9C" 
        Foreground="White" 
        Padding="15,5" 
        Margin="50,0,0,0" 
        VerticalAlignment="Bottom" 
        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10" BorderBrush="#D5DBDB" BorderThickness="1">
            <DataGrid AutoGenerateColumns="False" 
          CanUserAddRows="False"
          Background="Transparent" 
          BorderThickness="0"
          RowHeight="45"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#ECF0F1"
          VerticalGridLinesBrush="Transparent"
          ItemsSource="{Binding Transactions}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" Width="100" IsReadOnly="True" Foreground="#7F8C8D"/>

                    <DataGridTextColumn Header="Nazwa / Opis" Binding="{Binding Name}" Width="*" IsReadOnly="True">
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Konto" Binding="{Binding WalletName}" Width="120" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Sub-kategoria" Binding="{Binding SubCategory}" Width="120" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Kwota" Binding="{Binding Amount, StringFormat={}{0:N2} zł}" Width="100" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Amount, Converter={StaticResource IsNegativeConverter}}" Value="True">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Amount, Converter={StaticResource IsNegativeConverter}}" Value="False">
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Status" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ConfirmButtonStyle}" FontSize="10" Margin="5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>