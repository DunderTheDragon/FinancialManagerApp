<Window x:Class="FinancialManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:viewmodels="clr-namespace:FinancialManagerApp.ViewModels"
        xmlns:views="clr-namespace:FinancialManagerApp.Views"
        
        mc:Ignorable="d"
        Title="Finansense Manager" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WalletsViewModel}">
            <views:WalletsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GoalsViewModel}">
            <views:GoalsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="20,0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#16A085"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="20">
                <TextBlock Text="💰 Finansense" FontSize="24" FontWeight="Bold" Foreground="#1ABC9C" Margin="0,0,0,40" HorizontalAlignment="Center"/>

                <RadioButton Content="Dashboard" Height="50" Foreground="White" FontSize="16" IsChecked="True"
                             Command="{Binding NavigateToDashboardCommand}" Style="{StaticResource MenuButtonStyle}"/>

                <RadioButton Content="Transakcje" Height="50" Foreground="White" FontSize="16"
                             Command="{Binding NavigateToTransactionsCommand}" Style="{StaticResource MenuButtonStyle}"/>

                <RadioButton Content="Portfele" Height="50" Foreground="White" FontSize="16"
                             Command="{Binding NavigateToWalletsCommand}" Style="{StaticResource MenuButtonStyle}"/>

                <RadioButton Content="Cele / Skarbonki" Height="50" Foreground="White" FontSize="16"
                             Command="{Binding NavigateToGoalsCommand}" Style="{StaticResource MenuButtonStyle}"/>

                <RadioButton Content="Ustawienia" Height="50" Foreground="White" FontSize="16"
                             Command="{Binding NavigateToSettingsCommand}" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>