<Window x:Class="FinancialManagerApp.Views.AddRuleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dodaj nową regułę" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#ECF0F1">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Dodaj nową regułę kategoryzacji" 
                   FontSize="18" FontWeight="Bold" Foreground="#2C3E50" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="25" 
                BorderBrush="#D5DBDB" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel>
                <!-- Fraza -->
                <TextBlock Text="Fraza w nazwie transakcji:" 
                           FontSize="14" Foreground="#34495E" Margin="0,0,0,8"/>
                <TextBox x:Name="PhraseTextBox" 
                         Text="{Binding Phrase, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10" FontSize="14" 
                         Margin="0,0,0,20"
                         BorderBrush="#BDC3C7" BorderThickness="1"/>

                <!-- Kategoria -->
                <TextBlock Text="Kategoria:" 
                           FontSize="14" Foreground="#34495E" Margin="0,0,0,8"/>
                <ComboBox x:Name="CategoryComboBox"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Type"
                          Padding="10" FontSize="14" 
                          Margin="0,0,0,20"
                          BorderBrush="#BDC3C7" BorderThickness="1"
                          SelectionChanged="CategoryComboBox_SelectionChanged"/>

                <!-- Subkategoria -->
                <TextBlock Text="Subkategoria:" 
                           FontSize="14" Foreground="#34495E" Margin="0,0,0,8"/>
                <ComboBox x:Name="SubCategoryComboBox"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Padding="10" FontSize="14" 
                          Margin="0,0,0,20"
                          BorderBrush="#BDC3C7" BorderThickness="1"
                          IsEnabled="False"
                          ToolTip="Najpierw wybierz kategorię"
                          SelectionChanged="SubCategoryComboBox_SelectionChanged"
                          Loaded="SubCategoryComboBox_Loaded"/>
                <TextBlock x:Name="SubCategoryInfoText"
                          Text="Wybierz kategorię, aby zobaczyć dostępne subkategorie"
                          FontSize="11" Foreground="#95A5A6" FontStyle="Italic"
                          Margin="0,-15,0,20"
                          Visibility="Visible"/>

                <TextBlock Text="* Fraza, kategoria i subkategoria są wymagane" 
                           FontSize="11" Foreground="#95A5A6" FontStyle="Italic"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj" 
                    Width="100" Height="40" 
                    Margin="0,0,15,0"
                    Background="#95A5A6" Foreground="White" 
                    FontWeight="SemiBold" Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button Content="Dodaj" 
                    Width="100" Height="40"
                    Background="#3498DB" Foreground="White" 
                    FontWeight="SemiBold" Cursor="Hand"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
