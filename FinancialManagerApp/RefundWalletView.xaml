<Window x:Class="FinancialManagerApp.Views.RefundWalletView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuwanie skarbonki" Height="250" Width="350" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Likwidacja skarbonki" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" Foreground="#7F8C8D">
                Wybierz portfel, do którego mają wrócić środki:
            </TextBlock>

            <ComboBox x:Name="WalletCombo" Margin="0,5,0,20" Padding="5" 
                      ItemsSource="{Binding UserWallets}" DisplayMemberPath="Name"/>

            <UniformGrid Columns="2">
                <Button Content="Anuluj" IsCancel="True" Margin="0,0,5,0" Padding="8"/>
                <Button Content="Usuń i zwróć środki" Click="BtnConfirm_Click" 
                        Background="#E74C3C" Foreground="White" Padding="8" FontWeight="Bold"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>