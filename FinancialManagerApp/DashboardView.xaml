<UserControl x:Class="FinancialManagerApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:converters="clr-namespace:FinancialManagerApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Language="pl-PL">

    <UserControl.Resources>
        <converters:IsNegativeConverter x:Key="IsNegativeConverter"/>
    </UserControl.Resources>
    
    <Grid Background="#ECF0F1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20" BorderBrush="#D5DBDB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Moje portfele" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="{Binding TotalBalance, StringFormat={}{0:N2} zł}" FontSize="32" FontWeight="Light" Foreground="#1ABC9C" Margin="0,10,0,0"/>
                        <TextBlock Text="Łączne saldo ze wszystkich aktywnych kont" FontSize="12" Foreground="#95A5A6"/>
                    </StackPanel>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,20" BorderBrush="#D5DBDB" BorderThickness="1">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,15">
                                <TextBlock Text="Wydatki wg kategorii" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                <ComboBox HorizontalAlignment="Right" Width="180" Padding="5"
                          ItemsSource="{Binding AvailableWallets}"
                          SelectedItem="{Binding SelectedWalletForChart}"
                          DisplayMemberPath="Name">
                                </ComboBox>
                            </DockPanel>

                            <Border Height="250" Background="Transparent">
                                <lvc:CartesianChart Series="{Binding BarSeriesCollection}" LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Miesiące" Labels="{Binding BarLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Kwota (zł)" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Border>

                            <TextBlock Text="{Binding AverageSpendingText}" Margin="0,10,0,0" FontSize="11" Foreground="#7F8C8D" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,20" BorderBrush="#D5DBDB" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Udział wydatków" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                            <ComboBox Width="200"
          ItemsSource="{Binding AvailableMonths}" 
          SelectedItem="{Binding SelectedMonth}"
          Margin="0,0,0,10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat={}{0:MMMM yyyy}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox Width="200" 
                              SelectedIndex="0" 
                              SelectedValue="{Binding SelectedCategorizationType, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValuePath="Content"
                              IsReadOnly="True">
                                <ComboBoxItem Content="Kategoryzacja podstawowa"/>
                                <ComboBoxItem Content="Kategoryzacja zaawansowana"/>
                            </ComboBox>

                            <Border MinHeight="280" Margin="0,5,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Height" Value="280"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCategorizationType}" Value="Kategoryzacja zaawansowana">
                                                <Setter Property="Height" Value="450"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <lvc:PieChart Series="{Binding PieSeriesCollection}" 
                                  LegendLocation="Bottom" 
                                  InnerRadius="50" Hoverable="True">
                                    <lvc:PieChart.ChartLegend>
                                        <lvc:DefaultLegend BulletSize="8" FontSize="10"/>
                                    </lvc:PieChart.ChartLegend>
                                </lvc:PieChart>
                            </Border>

                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#D5DBDB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="5 ostatnich transakcji (wszystkie portfele)" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <Grid Margin="10,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="DATA" FontSize="10" FontWeight="Bold" Foreground="#BDC3C7"/>
                            <TextBlock Grid.Column="1" Text="OPIS / ŹRÓDŁO" FontSize="10" FontWeight="Bold" Foreground="#BDC3C7" Margin="20,0"/>
                            <TextBlock Grid.Column="2" Text="KWOTA" FontSize="10" FontWeight="Bold" Foreground="#BDC3C7"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding LastTransactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="10,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" Foreground="#7F8C8D" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1" Margin="20,0">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                                <TextBlock Text="{Binding Wallet}" FontSize="11" Foreground="#95A5A6"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
           Text="{Binding Amount, StringFormat={}{0:N2} zł}" 
           FontWeight="Bold" 
           VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#2C3E50"/>

                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Amount, Converter={StaticResource IsNegativeConverter}}" Value="True">
                                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                            </DataTrigger>

                                                            <DataTrigger Binding="{Binding Amount, Converter={StaticResource IsNegativeConverter}}" Value="False">
                                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="Zobacz wszystkie transakcje" 
                Command="{Binding DataContext.ViewTransactionsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                Background="Transparent" 
                BorderThickness="0" 
                Foreground="#3498DB" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0" 
                Cursor="Hand"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>